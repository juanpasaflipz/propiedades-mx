# API Configuration
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/real_estate_db
DB_HOST=localhost
DB_PORT=5432
DB_USER=user
DB_PASSWORD=password
DB_NAME=real_estate_db

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001

# Scraping Services
SCRAPEDO_TOKEN=your_scrapedo_token
ENABLE_SCHEDULED_SCRAPING=false

# External APIs
MAPBOX_API_KEY=your_mapbox_key
CURRENCY_API_KEY=your_currency_api_key

# Security
JWT_SECRET=your_jwt_secret
ADMIN_API_KEY=your_admin_api_key

# AI Configuration (for natural language search)
NEXT_PUBLIC_AI_PROVIDER=claude # or openai
CLAUDE_API_KEY=your_claude_api_key
CLAUDE_API_URL=https://api.anthropic.com/v1/messages
CLAUDE_MODEL=claude-3-opus-20240229
# Alternative: OpenAI
OPENAI_API_KEY=your_openai_api_key
OPENAI_API_URL=https://api.openai.com/v1/chat/completions
OPENAI_MODEL=gpt-4-turbo-preview